{
  "name": "personal-website",
  "version": "1.0.0",
  "description": "Jason Godson's personal website",
  "scripts": {
    "dev": "npm run build:mermaid && eleventy --serve",
    "build:clean": "rm -rf src_site dist",
    "build:mermaid": "node scripts/render-mermaid.js",
    "build:eleventy": "eleventy",
    "build": "npm run build:clean && npm run build:mermaid && npm run build:eleventy && node build.js",
    "deploy": "bash deploy.sh"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^6.0.2",
    "@11ty/eleventy-plugin-rss": "^1.2.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@mermaid-js/mermaid-cli": "^10.9.1",
    "fs-extra": "^11.1.1",
    "http-server": "^14.1.1",
    "jsdom": "^26.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-link-attributes": "^4.0.1"
  }
}
